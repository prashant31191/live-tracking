<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/rw_mar_8dp"
    android:layout_marginRight="@dimen/rw_mar_8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardlist_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/clrBgDark"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="3dp">

        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/rw_mar_8dp"
            android:paddingBottom="@dimen/rw_mar_8dp"
            android:gravity="center_vertical">


            <RelativeLayout
                android:id="@+id/rlUserData"
                android:paddingLeft="@dimen/rw_mar_8dp"
                android:paddingRight="@dimen/rw_mar_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.utils.CircularImageView
                    android:id="@+id/ivUserPhoto"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginRight="@dimen/m_10dp"
                    android:layout_alignParentLeft="true"
                    android:padding="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_network_check_green_700_24dp"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:layout_toRightOf="@+id/ivUserPhoto"
                    android:text="JEMS WILL post a photo"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12s"/>


                <TextView
                    android:visibility="visible"
                    android:id="@+id/tvRouteName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:layout_below="@+id/tvName"
                    android:layout_toRightOf="@+id/ivUserPhoto"
                    android:text="NYC 34th street"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12s"/>

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRouteName"
                    android:layout_marginTop="5dp"
                    android:text="26 min ago"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/ivUserPhoto"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/text_10s"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlUserPostData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlUserData"
                android:paddingTop="@dimen/rw_mar_8dp">
                <ImageView
                    android:visibility="visible"
                    android:id="@+id/ivImagePost"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:src="@drawable/ic_keyboard_arrow_down_blue_grey_500_48dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvTextPost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivImagePost"

                    android:text="this is some dummy text \n d sahdfk khaksd hkj \n asdkn asnd ahd\n szhdc ashd \n sdjfh as 5♣♦☺ awesom 1♪8◘"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12s"

                    android:padding ="@dimen/rw_mar_8dp"

                    />

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>